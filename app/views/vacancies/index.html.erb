<h1>Вакансии</h1>

<% if @vacancy.nil? %>
    <b>В базе нет ни одной вакансии.</b>
<% else %>
    <table>
      <tr>
        <th>№</th>
        <th>Название</th>
        <th></th>
      </tr>
      <% @vacancy.each do |i| %>

          <tr>
            <td><%= i.id %></td>
            <td><%= link_to i.title, vacancy_path(i) %></td>
            <td><%= link_to "Удалить", i, method: :delete, data: {confirm: "Удалить?"} %></td>
          </tr>

      <% end %>
    </table>
<% end %>