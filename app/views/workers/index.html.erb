<h1>Работники </h1>
<h2><%= link_to '[Добавить работника]', new_worker_path %></h2>
<% if @workers.nil? %>
    <b>В базе нет ни одного работника.</b>
<% else %>
    <table>
      <tr>
        <th>ID</th>
        <th>Имя</th>
        <th>Статус</th>
        <th></th>
      </tr>
      <% @workers.each do |i| %>

          <tr>
            <td><%= i.id %></td>
            <td><%= link_to i.name, worker_path(i) %></td>
            <% if(i.status)%>
                <td>да</td>
            <% else %>
                <td>нет</td>
            <% end %>
            <td><%= link_to "Удалить", i, method: :delete, data: {confirm: "Удалить?"} %></td>
          </tr>

      <% end %>
    </table>
<% end %>